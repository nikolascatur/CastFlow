<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="phone.nikolas.com.castflow">

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.splash.SplashActivity"
            android:label="CastFlow"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.main.MainMenuActivity"
            android:label="Main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:label="Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.forgotpassword.ForgotPasswordActivity"
            android:label="ForgotPassword"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.signup.SignupActivity"
            android:label="SignUp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.addexpense.AddExpenseActivity"
            android:label="AddExpense"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>


</manifest>